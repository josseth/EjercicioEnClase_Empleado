<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROEHECT.MainPage"
             BackgroundImageSource="backgrudn.jpg">

    <StackLayout>
        <Frame Opacity="0.3" Padding="24" CornerRadius="0">
            <Label Opacity="1.0" Text="BIENVENIDO!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Label TextColor="White" Text="Nombre" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="INGRESE EL NOMBRE!" Keyboard="Text" x:Name="txtnombre" Margin="10,10,10,10"/>
        <Label TextColor="White" Text="Edad" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="INGRESE LA EDAD!" Keyboard="Numeric" x:Name="txtedad" Margin="10,10,10,10"/>

        <Button Clicked="btnmostrar_Clicked" x:Name="btnmostrar" Text="MOSTRAR" FontSize="Title" TextColor="White" BackgroundColor="RoyalBlue" Margin="50,20,50,20"/>
        <Button Clicked="btnpagina2_Clicked" x:Name="btnpagina2" Text="Segunda Pagina" FontSize="Title" TextColor="White" BackgroundColor="DimGray" Margin="50,20,50,20"/>
    </StackLayout>

</ContentPage>
